{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@eam-js/common/navigation": ["libs/common/navigation/src/index.ts"],
      "@eam-js/projects/overview-shell": [
        "libs/projects/overview-shell/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
